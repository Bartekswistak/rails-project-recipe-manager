<li><h2><%= link_to recipe.name, recipe_path(recipe)%></h2></li>
<li><%= recipe.time_in_minutes %> minutes until it's ready | By: <%= link_to recipe.user_name, user_path(recipe.user)%> | <%= recipe.comments_size%> |<%= render 'favorites/favorited', recipe: recipe%></l3>
<% if !current_page?('/') && logged_in? %>
  <%= link_to "Edit", edit_recipe_path(recipe) if current_user.can_edit?(recipe)%> | <%= link_to "Delete", recipe_path(recipe), method: :delete if current_user.can_delete?(recipe)%>
<% end %>